---
interface HeroCopy {
  title: string;
  subtitle: string;
  primaryCtaLabel: string;
  secondaryCtaLabel: string;
}

export interface Props {
  copy?: HeroCopy;
}

const defaultCopy: HeroCopy = {
  title: "Inteligentne listy zakupów z AI",
  subtitle:
    "Twórz i współdziel listy, które same kategoryzują produkty, działają offline i świetnie sprawdzają się na telefonie w sklepie.",
  primaryCtaLabel: "Zaloguj się",
  secondaryCtaLabel: "Załóż konto",
};

const { copy = defaultCopy } = Astro.props;
---

<section class="grid gap-10 md:grid-cols-[minmax(0,1.2fr)_minmax(0,1fr)] md:items-center">
  <div class="space-y-6">
    <h1 class="text-balance text-3xl font-semibold tracking-tight text-foreground sm:text-4xl md:text-5xl">
      {copy.title}
    </h1>

    <p class="max-w-xl text-balance text-sm text-muted-foreground sm:text-base">
      {copy.subtitle}
    </p>

    <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
      <a
        href="/auth/login"
        class="inline-flex items-center justify-center rounded-md bg-primary px-5 py-2.5 text-sm font-medium text-primary-foreground shadow-sm transition hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
      >
        {copy.primaryCtaLabel}
      </a>

      <a
        href="/auth/register"
        class="inline-flex items-center justify-center rounded-md border border-input bg-background px-5 py-2.5 text-sm font-medium text-foreground shadow-sm transition hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
      >
        {copy.secondaryCtaLabel}
      </a>
    </div>
  </div>

  <div
    class="relative -mx-2 rounded-2xl border border-border bg-linear-to-br from-muted/60 via-background to-muted/80 p-4 shadow-sm sm:mx-0 sm:p-6"
    aria-hidden="true"
  >
    <div class="mb-3 flex items-center justify-between text-xs text-muted-foreground">
      <span class="inline-flex items-center gap-1">
        <span class="inline-block h-2 w-2 rounded-full bg-emerald-400"></span>
        Lista zakupów
      </span>
      <span>AI kategoryzuje produkty</span>
    </div>

    <div class="space-y-2 text-xs">
      <div class="rounded-lg border border-border bg-background/60 p-3">
        <div class="mb-1 flex items-center justify-between">
          <span class="font-medium">Warzywa i owoce</span>
          <span class="text-[10px] text-muted-foreground">3 pozycje</span>
        </div>
        <ul class="space-y-1 text-[11px] text-muted-foreground">
          <li>✓ Pomidory</li>
          <li>○ Ogórki</li>
          <li>○ Banany</li>
        </ul>
      </div>

      <div class="rounded-lg border border-border bg-background/60 p-3">
        <div class="mb-1 flex items-center justify-between">
          <span class="font-medium">Nabiał</span>
          <span class="text-[10px] text-muted-foreground">2 pozycje</span>
        </div>
        <ul class="space-y-1 text-[11px] text-muted-foreground">
          <li>○ Mleko</li>
          <li>○ Jogurt naturalny</li>
        </ul>
      </div>

      <div class="rounded-lg border border-border bg-background/60 p-3">
        <div class="mb-1 flex items-center justify-between">
          <span class="font-medium">Inne</span>
          <span class="text-[10px] text-muted-foreground">2 pozycje</span>
        </div>
        <ul class="space-y-1 text-[11px] text-muted-foreground">
          <li>○ Papier toaletowy</li>
          <li>○ Płyn do naczyń</li>
        </ul>
      </div>
    </div>
  </div>
</section>
